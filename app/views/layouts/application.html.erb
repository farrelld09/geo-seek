    <script src="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.4.3/css/foundation-float.css"></script>
  </head>
  <body>
    <div class="top-bar">
      <h1>Take A Hike!</h1>
    </div>
    <div id='map' style='width: 100%; height: 300px;'></div>
      <script>
      mapboxgl.accessToken = 'pk.eyJ1IjoiZmFycmVsbGQwOSIsImEiOiJjamI0ZWVtdGc4Mm04MndyenRldW9wYzllIn0.djhxR3NXo9cTIOlCmHNLvQ';
